extends layout

block content
  ul.errors
     if errors
       each error, i in errors
         .alert.alert-dismissible.alert-danger
            button.close(type='button', data-dismiss='alert') Ã—
            #{error.msg}
  .container.well.col-lg-4.col-lg-offset-4.login
    form.form-horizontal(action='#', method='post', enctype='multipart/form-data')
      fieldset
        legend.head #{title}
        .form-group
          label.col-md-2.control-label(for='enrollemnt') Enrollment
          .col-md-10
            input#enrollment.form-control(type='text', placeholder='Enrollment Number')
        .form-group
          label.col-md-2.control-label(for='inputPassword') Password
          .col-md-10
            input#inputPassword.form-control(type='password', placeholder='Password')
        button.btn.btn-default(type='reset') Cancel
        button.btn.btn-primary(type='submit') Submit
